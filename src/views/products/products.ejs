<!DOCTYPE html>
<html lang="es">

<head>
    <!-- head -->
    <%- include('../partials/head.ejs')  %>
    <link rel="stylesheet" href="/css/productsStyle.css">
    <title>Productos</title>
</head>

<body>

    <!-- header -->
    <%- include('../partials/header.ejs') %>

    <main class="main">
        <div class="productos container">

            <% for (let i=0; i<products.length; i++) { %>

            <div class="card">
                <div class="product__item">
                    <img class="product__image" src="<%= products[i].image ? products[i].image : '/img/productImages/default.jpg' %>" alt="">
                    <div class="product__info">
                        <a href="/products/<%= products[i].id %>/details" class="product__name"><%= products[i].name %></a>
                        <div class="product__info2">
                            <% if (products[i].discount > 0) { %>
                                <p class="product__price">$<%= toThousand(Math.floor(products[i].price - (products[i].price*(products[i].discount/100)))) %></p>
                                <p class="product__discount"><%= products[i].discount %>% OFF!!!</p>
                            <% } else { %>
                                <p class="product__price">$<%= toThousand(Math.floor(products[i].price - (products[i].price*(products[i].discount/100)))) %></p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <% } %>

        </div>
    </main>


    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>

</body>

</html>