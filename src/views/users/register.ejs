<!DOCTYPE html>
<html lang="es">

<head>
    <!-- head -->
    <%- include('../partials/head.ejs')  %>
    <link rel="stylesheet" href="/css/registerStyle.css">
    <title>Registrarse</title>
</head>

<body>

    <!-- header -->
    <%- include('../partials/header.ejs') %>

    <main class="main container">

        <form class="form-register" action="" method="POST" enctype="multipart/form-data">
            <h2 class="register__title">Crear nueva cuenta</h2>
            <div class="campo">
                <label for="nombre">Nombre:</label>
                <input type="text" name="nombre" id="nombre">
                <% if (locals.errors && errors.nombre) { %>
                    <p class="feedback"><%= errors.name.msg %></p>
                <% } %>
            </div>
            <div class="campo">
                <label for="apellido">Apellido:</label>
                <input type="text" name="apellido" id="apellido">
            </div>
            <div class="campo">
                <label for="username">Nombre de usuario:</label>
                <input type="text" name="username" id="username">
            </div>
            <div class="campo">
                <label for="password">Contraseña:</label>
                <input type="password" name="password" id="password">
            </div>
            <div class="campo">
                <label for="confirmpassword">Confirmar Contraseña:</label>
                <input type="password" name="confirmpassword" id="confirmpassword">
            </div>
            <div class="campo">
                <label for="email">Email:</label>
                <input type="email" name="email" id="email">
            </div>
            <div class="campo">
                <label for="fechadenac">Fecha de Nacimiento:</label>
                <input type="date" name="fechadenac" id="fechadenac">
            </div>
            <div class="campo">
                <label for="imagenPerfil">Foto de Perfil</label>
                <input type="file" name="imagenPerfil" id="imagenPerfil" accept=".jpg">
            </div>
            <div class="campo-botones">
                <button type="reset">Borrar</button>
                <button type="submit">Enviar</button>
            </div>
        </form>

    </main>

    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>

</body>

</html>